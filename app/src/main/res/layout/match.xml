<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/time"
    android:textSize="15sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Today, 6PM"
    android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/FirstTeamLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/teamlogo"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/SecondTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_alignRight="@+id/SpMark"
            android:text="Zamaleck"
            android:layout_weight="1"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/SpMark"
            android:layout_width="2dp"
            android:orientation="horizontal"
            android:layout_height="30dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
           />
        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/firstTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Al wydad  "
            android:textSize="20dp"
            android:layout_alignLeft="@+id/SpMark"/>

        <ImageView
            android:id="@+id/SecontTeamLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/teamlogo"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2    -   1"
        android:textSize="18sp"/>
</LinearLayout>